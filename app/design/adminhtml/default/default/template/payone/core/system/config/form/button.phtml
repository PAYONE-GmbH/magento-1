<script type="text/javascript">
    //<![CDATA[
    function <?php echo $this->getElementId() ?>_click() {
        new Ajax.Request('<?php echo $this->getAjaxButtonUrl() ?>', {
            method: 'get',
            onSuccess: function (transport) {
                if (transport.responseText) {
                    if (JSON.parse(transport.responseText).result === 'OK') {
                        location.reload();
                    } else {
                        alert('An error occurred while fetching parameters for Amazon Pay!');
                    }
                }
            }
        });
    }
    //]]>
</script>

