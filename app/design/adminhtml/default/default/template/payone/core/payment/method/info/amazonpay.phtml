/** @var $this Payone_Core_Block_Payment_Method_Info_AmazonPay */
?>
<?php echo '<u><b>' . $this->escapeHtml($this->getMethodTitle()) . '</b></u>' ?>
<br/>&nbsp;<br/>
<?php
if ($this->getInfo()) :
    $sOrderReference = $this->escapeHtml($this->getInfo()->getData('payone_amz_order_reference'));
    $sOrderReference = empty($sOrderReference) ? "N/A" : $sOrderReference;
    echo $this->__('Amazon Order Ref.: %s', $sOrderReference) ?>
    <br/>
<?php endif; ?>
<?php if ($this->getLastTransId() == '') : ?>
    <?php echo $this->__('Payment has not been processed yet.') ?>
<?php else : ?>
    <?php echo $this->__('Payone Transaction ID: %s', $this->escapeHtml($this->getLastTransId())) ?>
<?php endif; ?>
<br/>
