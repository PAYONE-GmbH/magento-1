<config>
    <modules>
        <Payone_Licensemanager>
            <version>0.1.0</version>
        </Payone_Licensemanager>
    </modules>

    <global>
        <blocks>
            <payone_licensemanager>
                <class>Payone_Licensemanager_Block</class>
            </payone_licensemanager>
        </blocks>
        <helpers>
            <payone_licensemanager>
                <class>Payone_Licensemanager_Helper</class>
            </payone_licensemanager>
        </helpers>
        <models>
            <payone_licensemanager>
                <class>Payone_Licensemanager_Model</class>
            </payone_licensemanager>
        </models>
        <events>
            <controller_front_init_before>
                <observers>
                    <payone_license_manager>
                        <type>singleton</type>
                        <class>payone_licensemanager/observer</class>
                        <method>checkLicense</method>
                    </payone_license_manager>
                </observers>
            </controller_front_init_before>
        </events>
    </global>

    <frontend>
        <routers>
            <payone_licensemanager>
                <use>standard</use>
                <args>
                    <module>Payone_Licensemanager</module>
                    <frontName>payonelicensemanager</frontName>
                </args>
            </payone_licensemanager>
        </routers>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
				<args>
					<modules>
						<payone_licensemanager before="Mage_Adminhtml">Payone_Licensemanager_Adminhtml</payone_licensemanager>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Payone_Licensemanager>
                    <files>
                        <default>Payone_Licensemanager.csv</default>
                    </files>
                </Payone_Licensemanager>
            </modules>
        </translate>
        <layout>
            <updates>
                <payone_licensemanager>
                    <file>payone/licensemanager.xml</file>
                </payone_licensemanager>
            </updates>
        </layout>
    </adminhtml>

</config>